<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pj.rivermonitor.ShowLast10Readings">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinTerminal"
        android:layout_marginTop="10dp"
        android:spinnerMode="dropdown"
        android:gravity="left"
        android:layout_marginLeft="0dp"
        android:paddingLeft="0dp"/>

    <TextView
        android:layout_width="130dip"
        android:layout_height="wrap_content"
        android:textSize="12dip"
        android:text="@string/text_date"
        android:layout_below="@id/spinTerminal"
        android:id="@+id/tbID" />
    <TextView
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:textSize="12dip"
        android:layout_toRightOf="@id/tbID"
        android:layout_below="@id/spinTerminal"
        android:text="@string/text_distance"
        android:id="@+id/lblDistance"
        android:textAlignment="center"
        android:layout_marginLeft="1dip"/>
    <TextView
        android:layout_width="80dip"
        android:layout_height="wrap_content"
        android:textSize="12dip"
        android:layout_toRightOf="@id/lblDistance"
        android:text="@string/text_temperature"
        android:layout_below="@id/spinTerminal"
        android:id="@+id/lblTemperature"
        android:textAlignment="center"
        android:layout_marginLeft="1dip"
         />
    <TextView
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:textSize="12dip"
        android:layout_toRightOf="@+id/lblTemperature"
        android:layout_below="@id/spinTerminal"
        android:text="@string/text_humidity"
        android:textAlignment="center"
        android:id="@+id/lblHumidity"
        android:layout_marginLeft="1dip"/>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewmio"
        android:layout_below="@id/tbID"/>
</RelativeLayout>
